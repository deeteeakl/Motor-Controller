#:import CircularProgressBar circular_progress_bar 
#:import Label kivy.core.text.Label 
#:set _label Label(text="Charge...\n{}%", color=(1,1,1,1), halign="center")

<MotorController>:
    canvas:
        Color: 
            rgb: 0.1,0.1,0.1,1
        Rectangle:
            size: root.size
            pos: root.pos
            
    SpeedMeter:
        id: power_guage
        min: speed_value.min
        max: speed_value.max
        tick: 10
        start_angle: -90
        end_angle: 130
        subtick: 5
        display_first: True
        display_last: True
        label: 'Power'
        value: speed_value.value
        value_font_size: 22
        needle_color: '#909090a9'
        shadow_color: '#ffe599a9'
        sectors: (self.min,"#cc9900ff", self.max)
        pos_hint: {"top": 0.95}
        size_hint: 1.0, 0.5
        size: self.size

    Switch:
        id: power_button
        active: False
        size_hint: 0.2, 0.1
        pos_hint: {"top": 0.9, "left": 0.1}
        on_active:  app.power_button(self, self.active)

    CircularProgressBar:
        id: battery
        max: 100
        min: 0
        #thickness: 15
        value: 100
        progress_colour: (.6784, .9411, .2353, 1)
        background_colour: (0, 0, 0, 1)
        #cap_precision: 3
        pos_hint: {"right": 1}
        label: _label

    Slider:
        id: speed_value
        disabled: True
        min: 0
        max: 100
        value: 0
        step: 5
        size_hint: 0.7, 0.1
        pos_hint: {"center_x":0.5, "center_y":0.5}
        background_width: dp(48) 
        border_horizontal: 0, 0, 0, 0
        cursor_size: dp(55), dp(55)
        on_value: app.set_speed()

    Button:
        id: direction
        background_down: "reverse.jpeg"
        background_normal: "forward.jpeg"
        size_hint: 0.3, 0.4
        pos_hint: {"center_x":0.7, "center_y":0.2}
        on_release: app.change_direction()
