#:import random random
<ScatterTextWidget>:
    orientation: "vertical"
    padding: 10,10
    canvas:
        Color: 
            rgba: 0,1,0,1
        Rectangle:
            pos: self.pos
            size: self.size


    TextInput:
        id: textinput
        font_size: 150
        size_hint_y: None
        height: 200
        text: "default"
        color: root.text_color
        on_text: root.change_label_colour()
    FloatLayout:
        Scatter:
            center: self.parent.center
            size_hint: None, None
            size: label_t.size
            Label:
                id: label_t
                color: root.text_color
                text: textinput.text
                font_size: 150
                size: self.texture_size
    BoxLayout:
        orientation: "horizontal"
        Label:
            id: label_b
            font_size: 100
            color: root.text_color
            text: textinput.text[:3:-1]
        
        Label:
            id: label_c
            font_size: 150
            color: root.text_color
            text: textinput.text[-3::-1]